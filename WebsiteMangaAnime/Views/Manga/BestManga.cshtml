@model PagedList.IPagedList<WebsiteMangaAnime.Models.Manga>
@using PagedList.Mvc
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manga";
}
@Html.AntiForgeryToken()
<div class="jumbotron">
    <div class="">
        <h2>Манга</h2>
        <p class="lead">
            Популярная манга за все время
        </p>
    </div>
    <div class="input-lg">
        @using (Html.BeginForm("Search", "Search", FormMethod.Post))
        {
            <label><input type="text" name="srcvl" class="form-control" placeholder="Искать по манге" /></label>
            <label><input type="submit" class="btn btn-primary" value="Поиск" /></label>
        }
    </div>
</div>
<div>
    <div class="col-md-2">
        @foreach (var manga in Model)
        {
            <p>
                <input type="image" onclick="location.href='@Url.Action("GetManga", "Manga", new { id = manga.Id })'" src="@System.Configuration.ConfigurationManager.AppSettings["ImagePath"]@manga.ImageLink" />
            </p>
            <b>
                @manga.Name
            </b>
        }
    </div>
    <div>
        <p>Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount</p>
        <p>@Html.PagedListPager(Model, page => Url.Action("BestManga", new { page }))</p>
    </div>
</div>