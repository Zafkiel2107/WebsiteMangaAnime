@model WebsiteMangaAnime.Models.IdentityControl.LoginModel
@{
    ViewBag.Title = "Вход в личный кабинет";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="container">
        <div class="text-left">
            <h2>Авторизация</h2>
        </div>
    </div>
    <hr />
    <div class="container">
        @using (Html.BeginForm("Login", "Identity", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="form-group">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="form-horizontal">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Войти" />
            </div>
        }
        <hr />
        <div class="text-left">
            @Html.ActionLink("Еще не зарегистрированы?", "Register", "Identity")
        </div>
        <br />
        <div class="text-left">
            @Html.ActionLink("Забыли пароль?", "ForgotPassword", "Identity")
        </div>
    </div>
</div>